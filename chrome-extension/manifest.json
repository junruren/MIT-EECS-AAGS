{
  "manifest_version": 3,
  "name": "MIT EECS AAGS Checker",
  "version": "2.2.1",
  "description": "Highlights and annotates AAGS subjects across MIT course catalog and planning pages",
  "permissions": [
    "offscreen",
    "activeTab"
  ],
  "host_permissions": [
    "https://eecsis.mit.edu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://eecseduportal.mit.edu/eduportal/who_is_teaching_what*"],
      "js": ["aags-common.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://catalog.mit.edu/subjects/*",
        "https://student.mit.edu/catalog/*",
        "https://www.eecs.mit.edu/academics/subject-updates*"
      ],
      "js": ["aags-common.js", "content-annotator.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "EECS AAGS Checker"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}